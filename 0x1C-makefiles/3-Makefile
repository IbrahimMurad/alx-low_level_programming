CC = gcc
SRC = .c
OBJ = .o
NAME = school
RM = oclean

all : $(NAME)

$(NAME) : main$(OBJ) school$(OBJ)
	$(CC) main$(OBJ) school$(OBJ) -o $(NAME)

main$(OBJ) : main$(SRC) m.h
	$(CC) -c -o main$(OBJ) main$(SRC)

school$(OBJ) : school$(SRC) m.h
	$(CC) -c -o school$(OBJ) school$(SRC)

clean :
	rm -f *~ $(NAME)

$(RM) :
	rm -f main$(OBJ) school$(OBJ)

fclean : clean $(RM)

re : $(RM)
